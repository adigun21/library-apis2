package com.libraryapis2.Author;

import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;
import javax.persistence.SequenceGenerator;
import javax.persistence.Table;

@Entity
@Table(name = "AUTHOR")
public class AuthorEntity {
	
	@Column(name = "author_Id")
	@Id
	@GeneratedValue(strategy = GenerationType.SEQUENCE, generator = "authorId_generator")
	@SequenceGenerator(name = "authorId_generator", sequenceName = "author_sequence", allocationSize = 50)
	private int authorId;
	
	@Column(name = "Name")
	private String firstName;
	
	@Column(name = "Last")
	private String lastName;
	
	@Column(name = "Date_Of_Birth")
	private String dateOfBirth;
	
	@Column(name = "ENUM")
	private Enum<?> gender;

	public AuthorEntity() {

	}

	

	public AuthorEntity(int authorid, String firstName, String lastName, String dateOfBirth, Enum<?> gender) {
		
		this.authorId = authorid;
		this.firstName = firstName;
		this.lastName = lastName;
		this.dateOfBirth = dateOfBirth;
		this.gender = gender;
	}



	public int getAuthorid() {
		return authorId;
	}

	public String getFirstName() {
		return firstName;
	}



	public void setFirstName(String firstName) {
		this.firstName = firstName;
	}



	public String getLastName() {
		return lastName;
	}



	public void setLastName(String lastName) {
		this.lastName = lastName;
	}



	public String getDateOfBirth() {
		return dateOfBirth;
	}



	public void setDateOfBirth(String dateOfBirth) {
		this.dateOfBirth = dateOfBirth;
	}



	public Enum<?> getGender() {
		return gender;
	}



	public void setGender(Enum<?> gender) {
		this.gender = gender;
	}



	

	
	
	
}

