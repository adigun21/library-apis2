package com.libraryapis2.Author;

import javax.validation.constraints.Email;
import javax.validation.constraints.NotNull;
import javax.validation.constraints.Pattern;
import javax.validation.constraints.Size;

public class Author {
	
	private Integer authorId;
	
	@NotNull
	@Size(min =1, max = 50, message = "Publisher name must be between 1 and 50 characters")
	private String firstName;
	
	@Email(message = "Please enter a valid Email Id")
	private String lastName;
	
	@Pattern(regexp = "\\d{3}-\\d{3}-\\d{3}", message = "Please enter phonenumber is fromat 123-456-789")
	private String dateOfBirth;
	
	private Enum<?> gender;
	
	public Author() {
	
	}

	public Author(Integer authorId, String firstName, String lastName, String dateOfBirth, Enum<?> gender) {
	
		this.authorId = authorId;
		this.firstName = firstName;
		this.lastName = lastName;
		this.dateOfBirth = dateOfBirth;
		this.gender = gender;
		
	}

	
	public Integer getAuthorId() {
		return authorId;
	}

	public void setAuthorId(Integer authorId) {
		this.authorId = authorId;
	}

	public String getFirstName() {
		return firstName;
	}

	public void setFirstName(String firstName) {
		this.firstName = firstName;
	}

	public String getLastName() {
		return lastName;
	}

	public void setLastName(String lastName) {
		this.lastName = lastName;
	}

	public String getDateOfBirth() {
		return dateOfBirth;
	}

	public void setDateOfBirth(String dateOfBirth) {
		this.dateOfBirth = dateOfBirth;
	}

	public Enum<?> getGender() {
		return gender;
	}

	public void setGender(Enum<?> gender) {
		this.gender = gender;
	}

	@Override
	public String toString() {
		return "Author [authorId=" + authorId + ", firstName=" + firstName + ", lastName=" + lastName + ", dateOfBirth="
				+ dateOfBirth + ", gender=" + gender + "]";
	}

	
	
	
	
	
	
	

}
